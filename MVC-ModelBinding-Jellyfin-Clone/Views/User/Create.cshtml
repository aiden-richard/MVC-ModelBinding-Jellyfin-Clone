@model CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-7">
            <h2 class="mb-4">Create User</h2>

            <form method="post">
                <div class="mb-2">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control bg-dark text-light borderless" />
                    <span asp-validation-for="Username" class="opacity-75"></span>
                    <br />
                </div>

                <div class="mb-2">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control bg-dark text-light borderless" />
                    <span asp-validation-for="Password" class="opacity-75"></span>
                    <br />
                </div>

                <div class="mb-2">
                    <label asp-for="Role" class="form-label">Role</label>
                    <select asp-for="Role" class="form-control bg-dark text-light borderless">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <span asp-validation-for="Role" class="opacity-75"></span>
                    <br />
                </div>

                <div class="mb-2">
                    <label asp-for="PreferredLanguage" class="form-label">Preferred Language</label>
                    <select asp-for="PreferredLanguage" class="form-control bg-dark text-light borderless">
                        <option value="English">English</option>
                    </select>
                    <span asp-validation-for="PreferredLanguage" class="opacity-75"></span>
                    <br />
                </div>

                <input type="submit" value="Create User" class="btn btn-primary btn-light-blue fw-semibold float-end" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}